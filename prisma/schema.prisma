generator client {
  provider = "prisma-client-js"
  output   = "../../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int           @id @default(autoincrement())
  email         String        @unique
  password      String
  firstName     String
  lastName      String
  role          Role          @default(USER)
  isVerified    Boolean       @default(false)
  
  createdAt     DateTime      @default(now())
  updatedAt  DateTime @updatedAt

  addresses     Address[]
  orders        Order[]
  subscriptions Subscription[]

  @@map("users") // nom r√©el de la table en SQL
}

enum Role {
  USER
  ADMIN
}

model Address {
  id         Int      @id @default(autoincrement())
  userId     Int
  street     String
  city       String
  postalCode String
  country    String

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user       User     @relation(fields: [userId], references: [id])

  @@map("addresses")
}

model Box {
  id          Int       @id @default(autoincrement())
  name        String
  description String
  imageUrl    String
  price       Float

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  subscriptions Subscription[]

  @@map("boxes")
}